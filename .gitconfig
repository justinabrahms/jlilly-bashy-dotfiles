[core]
  excludesfile = ~/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[user]
  name = Justin Lilly
  email = justin@justinlilly.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  a = commit --ammend
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ci = commit -v
  pick = cherry-pick -s
  sb = status -sb
  log1 = log --pretty=oneline --abbrev-commit
  serve = daemon --reuseaddr --base-path=. --export-all --verbose
  top-commits = shortlog -s -n --no-merges
#  fixme = grep -E "\#\s+([A-Z]{3,}+\:)"
[push]
	default = current
[github]
	user = justinlilly
[mergetool]
	tool = kdiff3
[diff]
    tool = kdiff3
